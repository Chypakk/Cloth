@model string

@{
    Layout = "_AdminLayout";
}

<h4>Добавить роль</h4>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Create" method="post">

    <label for="name"></label>
    <input name="name" class="form-control" />

    <button type="submit" class="btn btn-outline-dark p-1 mt-2">Создать</button>
    <a asp-action="AdminPage" class="btn btn-outline-danger p-1 mt-2" style="float:right">Отмена</a>

</form>