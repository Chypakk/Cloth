@model IEnumerable<Cloth.Models.AppUser>

<div class="bg-primary m-1 p-1 text-white"><h4>Users</h4></div>

<table class="table table-sm table-bordered">

    <tr><th>Id</th><th>Name</th><th>Email</th></tr>

    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No users</td></tr>
    }
    else
    {
        foreach (Cloth.Models.AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
            </tr>
        }
    }

</table>