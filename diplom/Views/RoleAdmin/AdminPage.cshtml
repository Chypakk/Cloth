@model IEnumerable<IdentityRole>

@{
    Layout = "_AdminLayout";
}

<div class="m-1 p-l"><h4>Роли</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-bordered">
    <tr>
        <th>Название</th>
        <th>Пользователи</th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <a class="btn btn-outline-dark btn-sm" asp-action="Edit" asp-route-id="@role.Id">Изменить роль</a>
                        <button class="btn btn-sm btn-outline-dark" type="submit">Удалить роль</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

