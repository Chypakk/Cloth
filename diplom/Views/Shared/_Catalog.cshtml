@model Products

<div class="col">

    <div class="card mb-2">
        
        @Html.Raw("<img class='card-img-top img-carousel', style='height:210px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.ProductImage) + "\"/>")

        <div class="card-body">

            <form id="@Model.Id" asp-action="ProductCard" asp-controller="Catalog" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="OptionsId" />
                <input type="hidden" asp-for="Name" />
                <button type="submit" class="button-text">
                    <div class="card-title">
                        <h4>@Model.Name</h4>
                    </div>
                </button>
            </form>


            <div class="card-text">

                <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <span style="color: black">@Model.Price.ToString("c")</span>
                    <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">Купить <i class="fa-solid fa-cart-arrow-down"></i></button>
                </form>

            </div>

        </div>

    </div>

</div>

