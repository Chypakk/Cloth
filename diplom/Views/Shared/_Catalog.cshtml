@model Products


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>@Model.Name</h4>
        <span class="badge badge-pill badge-primary" style="float: right; color: black"><small>@Model.Price p.</small></span>
    </div>
    <div class="card-text p-1">бренд: @Model.Brands.Name</div>
    <div class="card-text p-1">категория: @Model.Categories.Name</div>
    <div class="card-text p-1">цвет: @Model.Color</div>
</div>

<form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">

    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <span class="card-text p-1">@Model.Brands.Name</span>
    <span class="card-text p-1">@Model.Categories.Name</span>
    <span class="card-text p-1">@Model.Color</span>
    <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">Добавить в корзину</button>

</form>
