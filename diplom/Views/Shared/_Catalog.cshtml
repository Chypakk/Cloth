@model Products

<div class="col mb-3">
    <form id="@Model.Id" asp-action="ProductCard" asp-controller="Catalog" method="post">
        <div class="card mb-2 h-100">

            @Html.Raw("<img class='card-img-top img-carousel', style='height:210px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(Model.ProductImage) + "\"/>")

            <div class="card-body">
                <input type="hidden" name="ComId" value="@Model.Id" />
                <input type="hidden" name="ComName" value="@Model.Name" />
                <button type="submit" class="button-text">
                    <div class="card-title">
                        <h4>@Model.Name</h4>
                    </div>
                </button>
            </div>

            <div class="card-text p-3">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                <span style="color: black">@Model.Price.ToString("c")</span>
                <button type="submit" class="btn btn-dark btn-sm pull-right" style="float:right;">Подробнее</button>
            </div>

        </div>
    </form>
</div>
