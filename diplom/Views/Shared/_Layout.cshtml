<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - cloth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/diplom.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/ab4899f3b5.js" crossorigin="anonymous"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClotH</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Catalog">Каталог</a>
                        </li>
                    </ul>
                </div>

                <form class="d-flex" method="get" asp-action="Catalog" asp-controller="Catalog">
                    <input class="form-control me-2" type="search" placeholder="Search" @*aria-label="Search"*@ name="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>

                <div class="text-right nav-item">
                    @*@await Component.InvokeAsync("CartSummary")*@
                    <a class="btn btn-sm btn-secondary navbar-btn" asp-controller="Cart" asp-action="Index" sp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()">
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                </div>

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <div class="nav-item">
                            <a class="nav__link" asp-controller="Account" asp-action="AdminProfile"><img src="~/img/user.png" width="25" height="25" /></a>
                        </div>

                    }
                    else
                    {
                        <div class="nav-item">
                            <a class="nav__link" asp-controller="Account" asp-action="Profile"><img src="~/img/user.png" width="25" height="25" /></a>
                        </div>

                    }

                }
                else
                {
                    <div class="nav-item">
                        <a class="nav__link" asp-area="" asp-controller="Account" asp-action="Login"><img src="~/img/user.png" width="25" height="25" /></a>
                    </div>

                }
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="nav-item">
                        <a class="btn btn-danger" asp-action="LogOut" asp-controller="Account">Выйти</a>
                    </div>
                }
                else
                {
                    <div class="nav-item">
                        <a class="btn btn-success" asp-action="Login" asp-controller="Account">Войти</a>
                    </div>
                }


            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - cloth - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
