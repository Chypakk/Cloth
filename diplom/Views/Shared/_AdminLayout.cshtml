<!doctype html>
<html>
<head>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>@ViewData["Title"] - ClotH</title>
    <!-- Custom styles for this template -->
    <link href="~/css/dashboard.css" rel="stylesheet">
    <link href="~/css/sidebars.css" rel="stylesheet" />

</head>
<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
        <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" asp-action="Index" asp-controller="Home">ClotH</a>

        <div class="bg-dark w-100"></div>
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" asp-action="LogOut" asp-controller="Account">Выйти</a>
            </div>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">

                <div class="position-sticky pt-3">
                    <div class="flex-shrink-0 p-3 bg-white">
                        <ul class="list-unstyled ps-0">
                            <li class="mb-1">
                                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#home-collapse" aria-expanded="false">
                                    Crud
                                </button>
                                <div class="collapse" id="home-collapse">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a asp-action="BrandsView" asp-controller="Crud" class="link-dark rounded">Бренды</a></li>
                                        <li><a asp-action="CategoriesView" asp-controller="Crud" class="link-dark rounded">Категории</a></li>
                                        <li><a asp-action="OptionsView" asp-controller="Crud" class="link-dark rounded">Дополнительная информация</a></li>
                                        <li><a asp-action="ProductView" asp-controller="Crud" class="link-dark rounded">Продукты</a></li>
                                        <li><a asp-action="RemainsView" asp-controller="Crud" class="link-dark rounded">Остатки</a></li>
                                        <li><a asp-action="PromocodeView" asp-controller="Crud" class="link-dark rounded">Промокоды</a></li>
                                        <li><a asp-action="Picture" asp-controller="Picture" class="link-dark rounded">Изображения</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="mb-1">
                                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#dashboard-collapse" aria-expanded="false">
                                    Роли
                                </button>
                                <div class="collapse" id="dashboard-collapse">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">

                                        <li><a asp-action="AdminPage" asp-controller="RoleAdmin" class="link-dark rounded">Список ролей</a></li>
                                        <li><a asp-action="Create" asp-controller="RoleAdmin" class="link-dark rounded">Создание роли</a></li>
                                        <li><a asp-action="UserView" asp-controller="RoleAdmin" class="link-dark rounded">Список пользователей</a></li>

                                    </ul>
                                </div>
                            </li>
                            <li class="mb-1">
                                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#orders-collapse" aria-expanded="false">
                                    Заказы
                                </button>
                                <div class="collapse" id="orders-collapse">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a asp-action="Orders" asp-controller="Crud" class="link-dark rounded">Заказы</a></li>
                                        <li><a asp-action="Refunds" asp-controller="Refund" class="link-dark rounded">Возвраты</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="mb-1">
                                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#analytics-collapse" aria-expanded="false">
                                    Аналитика
                                </button>
                                <div class="collapse" id="analytics-collapse">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a asp-action="Chart" asp-controller="Chart" class="link-dark rounded">Категория товаров</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li class="border-top my-3"></li>
                            <li class="mb-1">
                                <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#account-collapse" aria-expanded="false">
                                    Аккаунт
                                </button>
                                <div class="collapse" id="account-collapse">
                                    <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                        <li><a class="link-dark rounded" asp-action="AdminProfile" asp-controller="Account">Профиль</a></li>
                                        <li><a class="link-dark rounded" asp-action="LogOut" asp-controller="Account">Выйти</a></li>
                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>

            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <div class="">
                        @RenderBody()
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebars.js"></script>
    <script src="~/js/dashboard.js"></script>
</body>
</html>
