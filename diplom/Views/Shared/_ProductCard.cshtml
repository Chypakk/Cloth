@model Products

<h1>@Model.Name</h1>
<p>Бренд: @Model.Brands.Name</p>
<p style="color: black">Цена: @Model.Price.ToString("c")</p>

<form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    
    <button type="submit" class="btn btn-success btn-sm pull-right">Купить <i class="fa-solid fa-cart-arrow-down"></i></button>
</form>
