@model Cloth.Models.UserModel.LoginModel;

<h1>Вход</h1>


<div class="text-danger" asp-validation-surnmary="All"></div>


<div class="container">
    <div class="row">
        <div class="col-auto" style="padding-left:0">
            <form asp-action="Login" method="post">

                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <div class="form-group form-floating">
                    <input asp-for="Login" class="form-control" id="floatingInput" placeholder="name@example.com" />
                    <label for="floatingInput">Логин</label>
                </div>
                <div class="form-group form-floating" style="margin-top: 10px;">

                    <input class="form-control" id="floatingInput" placeholder="Password" asp-for="Password" />
                    <label for="floatingInput">Пароль</label>
                </div>
                <div style="margin-top: 10px">
                    <button type="submit" class="btn btn-dark">Войти</button>
                    <a class="btn btn-dark" asp-action="CreateUser" style="float: right">Регистрация</a>
                </div>
                
            </form>
        </div>
    </div>
</div>