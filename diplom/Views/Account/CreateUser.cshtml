@model Cloth.Models.UserModel.UserViewModel;

<div class="row">
    <div class="col-auto">
        <h1>Регистрация</h1>
        <form asp-action="CreateUser" method="post">

            <div asp-validation-summary=" All" class="text-danger"></div>

            <div class="form-group form-floating">
                <input asp-for="Login" class="form-control" id="floatingInput" placeholder="Login" />
                <label for="floatingInput">Логин</label>
            </div>

            <div class="form-group form-floating my-2">

                <input class="form-control" id="floatingInput" placeholder="name@example.com" asp-for="Email" />
                <label for="floatingInput">Email</label>
            </div>

            <div class="form-group form-floating">

                <input type="password" class="form-control" id="floatingInput" placeholder="Password" asp-for="Password" />
                <label for="floatingInput">Пароль</label>
            </div>

            <button type="submit" class="btn btn-outline-dark mt-2">Создать</button>
        </form>
    </div>
</div>