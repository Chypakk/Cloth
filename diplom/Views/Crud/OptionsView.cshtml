@model IEnumerable<Options>

@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col">
        <h1>Допольнительная информация о продукте</h1>
    </div>
    <div class="col">
        <a class="mt-2 btn btn-outline-dark" asp-action="OptionsAdd">Добавить допольнительную информацию</a>
    </div>
</div>

<table class="table">

    <thead>
        <tr>
            <th class="p-2">Id</th>
            <th class="p-2">Материал</th>
            <th class="p-2">Цвет</th>
            <th class="p-2">Узор</th>
            <th class="p-2">Примечание по уходу</th>
            <th class="p-2">Описание</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td class="p-2">@p.Id</td>
                <td class="p-2">@p.Material</td>
                <td class="p-2">@p.Color</td>
                <td class="p-2">@p.Design</td>
                <td class="p-2">@p.CareNote</td>
                <td class="p-2">@p.Description</td>



                @if (User.Identity.IsAuthenticated)
                {
                    <td><a class="btn btn-outline-dark" asp-action="OptionsUpdate" asp-route-id="@p.Id">Изменить</a></td>
                    <td><a class="btn btn-outline-danger" asp-action="OptionsDelete" asp-route-id="@p.Id">Удалить</a></td>

                }
            </tr>
        }
    </tbody>
    
</table>
