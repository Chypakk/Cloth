@model Options

@{
    Layout = "_AdminLayout";
}
<h1>Добавление допольнительной информациии о продукте</h1>
<div class="row">
    <div class="col-auto">
        <form asp-action="OptionsAdd" method="post">

            <label>Материал</label>
            <input class="form-control" asp-for="Material" />

            <label>Цвет</label>
            <input class="form-control" asp-for="Color" />

            <label>Узор</label>
            <input class="form-control" asp-for="Design" />

            <label>Примечание по уходу</label>
            <input class="form-control" asp-for="CareNote" />

            <label>Описание</label>
            <input class="form-control" asp-for="Description" />

            <button type="submit" class="btn btn-outline-dark mt-2">Отправить</button>
        </form>
    </div>
</div>