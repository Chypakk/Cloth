@model CRUDVIewModel

@{
    Layout = "_AdminLayout";
}

<h1>Добавление товара</h1>

<div class="row">
    <div class="col-auto">
        <form asp-action="ProductAdd" method="post" enctype="multipart/form-data">

            <label>Имя</label>
            <input class="form-control" asp-for="ProductName" />

            <label>Id категории</label>
            <select class="form-select" asp-for="CategoryId">
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>

            <label>Id бренда</label>
            <select class="form-select" asp-for="BrandId">
                @foreach (var item in Model.Brands)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>

            <label>Дополнительная информация</label>
            <select class="form-select" asp-for="OptionsId">
                @foreach (var item in Model.Options)
                {
                    <option value="@item.Id">@item.Description</option>
                }
            </select>

            <label>Цена</label>
            <input class="form-control" asp-for="Price" />

            <fieldset>
                <label>Картинка</label>
                <input class="form-control" type="file" name="file" />
            </fieldset>

            <button type="submit" class="btn btn-outline-dark mt-2">Отправить</button>
        </form>
    </div>
</div>