@model Category

@{
    Layout = "_AdminLayout";
}
<h1>Добавление категории</h1>
<div class="row">
    <div class="col-auto">
        <form asp-action="CategoriesAdd" method="post">
            <label>Имя</label>
            <input class="form-control" asp-for="Name" />
            <button type="submit" class="btn btn-outline-dark mt-2">Отправить</button>
        </form>
    </div>
</div>