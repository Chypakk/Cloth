@model CRUDVIewModel

@{
    Layout = "_AdminLayout";
}
<h1>Добавление размера и остатков продукта</h1>
<div class="row">
    <div class="col-auto">
        <form asp-action="RemainsAdd" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label>Имя продукта</label>
            <select class="form-select" asp-for="ProductId">
                @foreach (var item in Model.Products)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
            

            <label>Размер</label>
            <input class="form-control" asp-for="Size" />

            <label>Количество</label>
            <input class="form-control" asp-for="Count" />

            <button type="submit" class="btn btn-outline-dark mt-2">Отправить</button>
        </form>
    </div>
</div>